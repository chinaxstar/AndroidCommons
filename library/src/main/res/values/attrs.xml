<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiscolorButton">
        <attr name="textColor_selectd" format="color" />
        <attr name="bgColor" format="color" />
        <attr name="radius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="TimeFloatView">
        <attr name="showTime" format="integer" />
        <!--显示时间 ms <=0 时表示一直显示-->
        <attr name="hidenTime" format="integer" />
        <!--消失动画时间 ms >300ms>-->
    </declare-styleable>
    <declare-styleable name="BounceBackViewPager">
        <!--
        determines the maximum amount of translation along the z-axis during the overscroll.
        Default is 150.
        -->
        <attr name="overscroll_translation" format="dimension" />

        <!-- Duration of animation when user releases the over scroll. Default is 400 ms. -->
        <attr name="overscroll_animation_duration" format="integer" />
    </declare-styleable>
    <declare-styleable name="MarqeeTextView">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="speed" format="integer" />
        <attr name="text" format="string" />
    </declare-styleable>
</resources>