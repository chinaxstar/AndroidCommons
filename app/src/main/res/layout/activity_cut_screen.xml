<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xstar.com.commons.CutScreenActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/animal1"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/animal2"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/animal3"/>

    <Button
        android:id="@+id/cut1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cut1"
        android:text="截屏1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cut1"
        android:onClick="cut2"
        android:text="截屏2"/>
</RelativeLayout>
